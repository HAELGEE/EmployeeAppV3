@using QRCoder
@using static QRCoder.PayloadGenerator
@{
    Url generator = new Url($"https://localhost:7152/Punchclock?id={Model.Id}");
    string payload = generator.ToString();

    QRCodeGenerator qrGenerator = new QRCodeGenerator();
    QRCodeData qrCodeData = qrGenerator.CreateQrCode(payload, QRCodeGenerator.ECCLevel.Q);
    PngByteQRCode qrCode = new PngByteQRCode(qrCodeData);


    byte[] qrCodeImage = qrCode.GetGraphic(10);

    string qrCodeBase64 = Convert.ToBase64String(qrCodeImage);
}

<img src="data:image/png;base64,@qrCodeBase64" alt="Qr code" style="position: absolute; left: 30rem; top: 10rem;">
